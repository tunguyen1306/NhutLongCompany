<script>
    var timeOut;
    function ReloadAll() {
        $('.reloadall').click();
        clearTimeout(timeOut);
        timeOut = setTimeout(function () {
            ReloadAll();
        }, 60000);
    }
    timeOut = setTimeout(function () {
        ReloadAll();
    },60000);
    

</script>