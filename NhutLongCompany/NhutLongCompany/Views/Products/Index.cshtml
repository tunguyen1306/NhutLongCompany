@using NhutLongCompany.Models
@model IEnumerable<BaoGiaTemDetailView>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
     NhutLongCompanyEntities db = new NhutLongCompanyEntities();
     var qr = (from data in db.tbl_OrderTem_BaoGia_Detail
               join datapro in db.tbl_Products on data.sanpam_id equals datapro.ID_Products
               join dataquy in db.tbl_QuyTrinh on data.id equals dataquy.ID_BaoGiaDetail
               where data.status == 2 && dataquy.ThuTu==8
               select new BaoGiaTemDetailView
               {
                   NameProducts = datapro.NameProducts,
                   CodeProducts = datapro.CodeProducts,
                   Date_Working = data.date_working,
                   Date_end = dataquy.NgayKetThuc_TT

               });
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Thông Tin sản phẩm</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->


<div class="row">
    <div class="col-lg-6">

        <div class="panel panel-default">

            <div class="panel-heading">
                <div style="font-size: 20px;font-weight: bold"> Sản phẩm đã hoàn tất</div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    Mã sản phẩm
                                </th>
                                <th>
                                    Tên sản phẩm
                                </th>
                                <th>
                                    Ngày bất đầu thực hiện
                                </th>
                                <th>
                                    Ngày hoàn tất
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in qr.ToList())
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.CodeProducts)</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NameProducts)

                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Date_Working)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Date_end)</td>
                                </tr>
                            }

                        </tbody>
                    </table> </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
    <div class="col-lg-6">

        <div class="panel panel-default">

            <div class="panel-heading">
                <div style="font-size: 20px;font-weight: bold"> Sản phẩm đang thực hiện</div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    Mã sản phẩm
                                </th>
                                <th>
                                    Tên sản phẩm
                                </th>
                                <th>
                                    Ngày bất đầu thực hiện
                                </th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.CodeProducts)</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NameProducts)

                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Date_Working)</td>
                                   
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

