@using NhutLongCompany.Models
@model IEnumerable<NhutLongCompany.Models.tbl_Products>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Thông Tin sản phẩm</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->


<div class="row">
    <div class="col-lg-6">

        <div class="panel panel-default">

            <div class="panel-heading">
                <div style="font-size: 20px;font-weight: bold"> Sản phẩm đã hoàn tất</div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover dataTables-example" >
                        <thead>
                            <tr>

                                <th>
                                    Tên sản phẩm
                                </th>
                                <th>
                                    Ngày bất đầu thực hiện
                                </th>
                                <th>
                                    Ngày hoàn tất
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (tbl_Products item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.NameProducts)

                                    </td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
    <div class="col-lg-6">

        <div class="panel panel-default">

            <div class="panel-heading">
                <div style="font-size: 20px;font-weight: bold"> Sản phẩm đang thực hiện</div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>

                                <th>
                                    Tên sản phẩm
                                </th>
                                <th>
                                    Ngày bất đầu thực hiện
                                </th>
                                <th>
                                    Ngày hoàn tất
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (tbl_Products item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.NameProducts)

                                    </td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

