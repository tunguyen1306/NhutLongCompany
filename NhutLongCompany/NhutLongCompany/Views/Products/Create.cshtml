@model NhutLongCompany.Models.tbl_Products

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Thêm thông tin sản phẩm</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Form Elements
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <div class="panel-body">
                    <div class="row">

                        <div class="col-lg-6">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <label>Mã khách hàng</label>

                                @Html.EditorFor(model => model.CodeProducts, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CodeProducts, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                <label>Tên sản phẩm</label>

                                @Html.EditorFor(model => model.NameProducts, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NameProducts, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Số lớp</label>

                                @Html.EditorFor(model => model.SolopProducts, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SolopProducts, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Loại giấy</label>

                                @Html.DropDownListFor(model => model.LoaigiayProducts, new List<SelectListItem>
                                {
                                    new SelectListItem {Value = "0", Text = "Chọn loại giấy"},
                                    new SelectListItem {Value = "3 lớp: 2 Vàng 1 Xeo", Text = "3 lớp: 2 Vàng 1 Xeo"},
                                    new SelectListItem {Value = "3 lớp: 1 Trắng 1 Xeo 1 Vàng", Text = "3 lớp: 1 Trắng 1 Xeo 1 Vàng"},
                                    new SelectListItem {Value = "3 lớp: 1 Đài Loan 1 Xeo 1 Vàng", Text = "3 lớp: 1 Đài Loan 1 Xeo 1 Vàng"},
                                    new SelectListItem {Value = "5 lớp: 2 Vàng 3 Xeo", Text = "5 lớp: 2 Vàng 3 Xeo"},
                                    new SelectListItem {Value = "5 lớp: 1 Trắng 1 Vàng 3 Xeo", Text = "5 lớp: 1 Trắng 1 Vàng 3 Xeo"},
                                    new SelectListItem {Value = "5 lớp: 1 Đài Loan 1 Vàng 3 Xeo", Text = "5 lớp: 1 Đài Loan 1 Vàng 3 Xeo"},
                                    new SelectListItem {Value = "2 lớp: 1 Vàng 1 Xeo - sóng E", Text = "2 lớp: 1 Vàng 1 Xeo - sóng E"},
                                    new SelectListItem {Value = "2 lớp: 1 Vàng 1 Xeo - sóng C", Text = "2 lớp: 1 Vàng 1 Xeo - sóng C"},
                                    new SelectListItem {Value = "2 lớp: 1 Trắng 1 Xeo - sóng E", Text = "2 lớp: 1 Trắng 1 Xeo - sóng E"}
                                }, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.LoaigiayProducts, "", new { @class = "text-danger" })

                            </div>


                            <div class="form-group">
                                <label>Offset/Flexo</label>

                                @Html.DropDownListFor(model => model.OffsetFlexoProducts, new List<SelectListItem> { new SelectListItem { Text = "Offset", Value = "Offset" }, new SelectListItem { Text = "Flexo", Value = "Flexo" } }, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.OffsetFlexoProducts, "", new { @class = "text-danger" })

                            </div>



                        </div>
                        <div class="col-lg-6">

                            <div class="form-group">
                                <label>Dán kim</label>

                                @Html.DropDownListFor(model => model.DanKimProducts, new List<SelectListItem> { new SelectListItem { Text = "Dán keo", Value = "Dán keo" }, new SelectListItem { Text = "Đóng kim", Value = "Đóng kim" } }, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DanKimProducts, "", new { @class = "text-danger" })

                            </div>
                            
                            <div class="form-group">
                                <label>Giá</label>

                                @Html.EditorFor(model => model.GiaProducts, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.GiaProducts, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Ngày tạo</label>

                                @Html.EditorFor(model => model.CreatedDateProducts, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CreatedDateProducts, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Trạng thái</label>

                                @Html.DropDownListFor(model => model.StatusProducts, new List<SelectListItem>
                                {
                                    new SelectListItem {Text = "Hoạt động", Value = "1"},
                                    new SelectListItem {Text = "Không hoạt động", Value = "0"}
                                }, new { @class = "form-control" })


                            </div>



                            <div class="form-group">
                                <label></label>
                                <input type="submit" value="Save" class="btn btn-primary" />
                                @Html.ActionLink("Hủy", "Index", "", new { @class = "btn btn-primary" })

                            </div>

                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
            }

        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
