@model NhutLongCompany.Models.tbl_Customers

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Sửa thông tin khách hàng</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Form Elements
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="panel-body">
                    <div class="row">

                        <div class="col-lg-6">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.IDCustomers)
                            <div class="form-group">
                                <label>Công ty</label>

                                @Html.EditorFor(model => model.CongTyCustomers, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CongTyCustomers, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Mã khách hàng</label>

                                @Html.EditorFor(model => model.CodeCustomers, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CodeCustomers, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                <label>Người đại diện</label>

                                @Html.EditorFor(model => model.NameCustomers, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NameCustomers, "", new { @class = "text-danger" })

                            </div>
                           
                            <div class="form-group">
                                <label>Chức vụ</label>

                                @Html.EditorFor(model => model.ChucvuCustomers, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ChucvuCustomers, "", new { @class = "text-danger" })

                            </div>
                           


                            <div class="form-group">
                                <label>Email</label>

                                @Html.EditorFor(model => model.EmailCustomers, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.EmailCustomers, "", new { @class = "text-danger" })

                            </div>



                        </div>
                        <div class="col-lg-6">

                            <div class="form-group">
                                <label>Số điện thoại</label>

                                @Html.EditorFor(model => model.PhoneCustomers, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PhoneCustomers, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Fax</label>

                                @Html.EditorFor(model => model.FaxCustomers, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FaxCustomers, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Địa chỉ</label>

                                @Html.EditorFor(model => model.DiachiCustomers, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DiachiCustomers, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Mã số thuế</label>

                                @Html.EditorFor(model => model.MasothueCustomers, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MasothueCustomers, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Trạng thái</label>

                                @Html.DropDownListFor(model => model.StatusCustomers, new List<SelectListItem>
                                {
                                    new SelectListItem {Text = "Hoạt động", Value = "1"},
                                    new SelectListItem {Text = "Tạm dừng", Value = "0"}
                                }, new { @class = "form-control" ,@id="StatusCustomers"})
                               

                            </div>
                            <div class="form-group cusnote hidden">
                                <label>Lí do</label>
                                <textarea id="txtnote" name="NoteCustomer" class="form-control"></textarea>
                              


                            </div>
                            <script>
                                $(function () {
                                    if ($('#StatusCustomers').val() == "0") {

                                        $('.cusnote').removeClass('hidden');
                                    }
                                    if ($('#StatusCustomers').val() == "1") {

                                        $('.cusnote').addClass('hidden');
                                    }
                                    $('#StatusCustomers').change(function () {
                                        
                                        if ($('#StatusCustomers').val() == "0") {

                                            $('.cusnote').removeClass('hidden');
                                        }
                                        if ($('#StatusCustomers').val() == "1") {

                                            $('.cusnote').addClass('hidden');
                                        }
                                    });
                                })
                            </script>


                            <div class="form-group">
                                <label></label>
                                <input type="submit" value="Save" class="btn btn-primary" />
                                @Html.ActionLink("Hủy", "Index", "", new { @class = "btn btn-primary" })

                            </div>

                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
            }

        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
