@using NhutLongCompany.Models
@model tbl_Customers

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
  
   
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">  Thông Tin chi tiết Khách Hàng</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">
       
        <div class="panel panel-default">

            <div class="panel-heading">
              
                <a class="btn btn-primary" href="@Url.Action("Index")">Quay lại</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                               
                              
                                <th>
                                    Người đại diện
                                </th>
                                <th>
                                    Công Ty
                                </th>
                                <th>
                                    Chức vụ
                                </th>
                                <th>
                                    Số điện thoại
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Mã Số Thuế
                                </th>
                                <th>
                                    Số Fax
                                </th>
                                <th>
                                    Địa chỉ
                                </th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                          
                            <tr>
                                   
                              
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.NameCustomers)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.CongTyCustomers)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.ChucvuCustomers)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.PhoneCustomers)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.EmailCustomers)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.MasothueCustomers)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.FaxCustomers)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.DiachiCustomers)
                                </td>
                                <td>
                                    @(
                                         Model.StatusCustomers == 1 ? "Hoạt động" : "Không hoạt động"
                                          )

                                </td>
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new {id = Model.IDCustomers}, new {@class = "btn btn-outline btn-primary btn-xs"})


                                    <a href="@Url.Action("Delete", "Customers", new {id = Model.IDCustomers})" class="btn btn-outline btn-primary btn-xs" onclick=" return confirm('Bạn có muốn xóa khách hàng không?'); ">Xóa</a>

                                </td>
                            </tr>
                       

                        </tbody>
                    </table>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
