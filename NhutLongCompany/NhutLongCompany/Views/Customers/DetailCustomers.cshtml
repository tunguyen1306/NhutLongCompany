@using NhutLongCompany.Models
@model tbl_Customers

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Thông Tin chi tiết Khách Hàng</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">

            <div class="panel-heading">
              
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>

                                </th>
                                <th>
                                    Mã Khách Hàng
                                </th>
                                <th>
                                    Người đại diện
                                </th>
                                <th>
                                    Công Ty
                                </th>
                                <th>
                                    Chức vụ
                                </th>
                                <th>
                                    Số điện thoại
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Mã Số Thuế
                                </th>
                                <th>
                                    Số Fax
                                </th>
                                <th>
                                    Địa chỉ
                                </th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (tbl_Customers item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.ActionLink("Thêm báo giá", "Create", "tbl_OrderTem", new { id = item.IDCustomers }, new { @class = "btn btn-outline btn-primary btn-xs" })
                                        @Html.ActionLink("DS đơn hàng", "Index", "tbl_OrderTem", new { id = item.IDCustomers }, new { @class = "btn btn-outline btn-primary btn-xs" })


                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CodeCustomers)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NameCustomers)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CongTyCustomers)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ChucvuCustomers)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhoneCustomers)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EmailCustomers)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MasothueCustomers)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FaxCustomers)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DiachiCustomers)
                                    </td>
                                    <td>
                                        @(
 item.StatusCustomers == 1 ? "Hoạt động" : "Không hoạt động"
                                        )

                                    </td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.IDCustomers }, new { @class = "btn btn-outline btn-primary btn-xs" })


                                        <a href="@Url.Action("Delete", "Customers", new { id = item.IDCustomers })" class="btn btn-outline btn-primary btn-xs" onclick="return confirm('Bạn có muốn xóa khách hàng không?');">Xóa</a>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
