@using NhutLongCompany.Models
@model IEnumerable<tbl_Customers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Thông Tin Khách Hàng</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">

            <div class="panel-heading">
                @Html.ActionLink("Thêm Khách hàng", "Create", "", new {@class = "btn btn-primary"})
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                               
                                <th>
                                    Mã Khách Hàng
                                </th>
                                <th>
                                    Người đại diện
                                </th>
                                <th>
                                    Công ty
                                </th>
                                <th>
                                    Trạng thái
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (tbl_Customers item in Model)
                            {
                                <tr>
                                   
                                    <td>
                                       
                                        <a href="@Url.Action("DetailCustomers", "Customers", new {id = item.IDCustomers})">@Html.DisplayFor(modelItem => item.CodeCustomers)</a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NameCustomers)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CongTyCustomers)

                                    </td>
                                    <td>
                                        @if (item.StatusCustomers == 1)
                                        {
                                            <a href="@Url.Action("IndexDH", "tbl_OrderTem", new {id = item.IDCustomers})" target="_blank" class="btn btn-outline btn-primary btn-xs">
                                                Hoạt động
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="" class="btn btn-outline btn-primary btn-xs" data-toggle="modal" data-target="#myModaltamdung_@item.IDCustomers">
                                                Tạm dừng
                                            </a>
                                            @Html.HiddenFor(modelItem => item.NoteCustomer)
                                            <div id="myModaltamdung_@item.IDCustomers" class="modal fade" role="dialog">
                                                <div class="modal-dialog">

                                                    <!-- Modal content-->
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                            <h4 class="modal-title">Lý do tạm dừng</h4>
                                                        </div>
                                                        <div class="modal-body">
                                                            <p>@item.NoteCustomer</p>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        }
                                        | <a href="@Url.Action("IndexBaoGia","Customers",new {id=item.IDCustomers})" class="btn btn-outline btn-primary btn-xs" target="_blank">
                                              Xem báo giá
                                          </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<!-- Modal -->
