@using NhutLongCompany.Models
@model IEnumerable<tbl_Customers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Thông Tin Khách Hàng</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">

            <div class="panel-heading">
                @Html.ActionLink("Thêm Khách hàng", "Create", "", new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                               
                                <th>
                                    Mã Khách Hàng
                                </th>
                                <th>
                                    Người đại diện
                                </th>
                              
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (tbl_Customers item in Model)
                            {
                                <tr>
                                   
                                    <td>
                                       
                                        <a href="@Url.Action("DetailCustomers","Customers",new {id=item.IDCustomers})">@Html.DisplayFor(modelItem => item.CodeCustomers)</a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NameCustomers)

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
