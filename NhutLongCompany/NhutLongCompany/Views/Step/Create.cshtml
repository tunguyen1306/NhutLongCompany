@model NhutLongCompany.Models.tbl_Config_Step

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Thêm thông tin công đoạn</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Form Elements
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="panel-body">
                    <div class="row">

                        <div class="col-lg-6">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label>Tên công đoạn</label>

                                @Html.EditorFor(model => model.TenCongDoan, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenCongDoan, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Định nghĩa</label>

                                @Html.EditorFor(model => model.DienGiai, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DienGiai, "", new { @class = "text-danger" })

                            </div>

                           

                            






                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Thứ tự</label>

                                @Html.EditorFor(model => model.ThuTu, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ThuTu, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Trạng thái</label>

                                @Html.DropDownListFor(model => model.TrangThai, new List<SelectListItem>
                                {
                                    new SelectListItem{Text="Hoạt động",Value="1"},
                                    new SelectListItem{Text="Không hoạt động",Value="1"}
                                }, htmlAttributes: new { @class = "form-control" })


                            </div>
                           

                            <div class="form-group">

                                <input type="submit" value="Thêm" class="btn btn-primary" />
                                @Html.ActionLink("Hủy", "Index", "", htmlAttributes: new { @class = "btn btn-primary" })

                            </div>

                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
    <!-- /.panel-body -->
            }
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
