@model IEnumerable<NhutLongCompany.Models.tbl_Config_Step>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Thông Tin công đoạn</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">

            <div class="panel-heading">
                @Html.ActionLink("Thêm mới", "Create", "", new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>

                                <th>
                                    Tên công đoạn
                                </th>
                                <th>
                                    Định nghĩa
                                </th>
                                <th>
                                    Thứ tự
                                </th>
                                <th>
                                    Trạng thái
                                </th>
                                <th width="200px">

                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenCongDoan)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DienGiai)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ThuTu)
                                    </td>
                                    <td>
                                        @if (item.TrangThai == 1)
                                        {
                                            @("Hoạt động")
                                        }
                                        @if (item.TrangThai == 0)
                                        {
                                            @("Không hoạt động")
                                        }

                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit","Step",new {id=item.ID})" class="btn btn-outline btn-primary btn-xs">
                                          Sửa
                                        </a>
                                       |
                                   
                                        <a href="@Url.Action("Delete", "Step", new {id = item.ID})" class="btn btn-outline btn-primary btn-xs" onclick="return confirm('Bạn có muốn xóa khách hàng không?'); ">Xóa</a>

                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<!-- Modal -->
