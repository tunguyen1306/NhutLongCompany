@using NhutLongCompany.Models
@model IEnumerable<BaoGiaColumn>


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Thông Tin báo giá</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->


<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">

            <div class="panel-heading">

                @Html.ActionLink("Thêm báo giá", "Create", "", new { @class = "btn btn-primary" })

            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    Mã đơn hàng
                                </th>
                                <th>
                                    Khách hàng
                                </th>
                                <th>
                                    Tổng tiền
                                </th>
                                <th>
                                    Làm mẫu
                                </th>
                                <th>
                                    Ngày có mẫu
                                </th>
                                <th>
                                    Ngày báo giá
                                </th>
                                <th>
                                    Lần báo giá
                                </th>
                                <th>
                                    Duyệt báo giá
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (BaoGiaColumn item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CodeDonHang)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NameCustomers)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TongTien)

                                    </td>
                                    <td>
                                        @(item.LamMau == 1 ? "Có" : "Không")
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgayCoMau)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgayBaoGia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LanBaoGia)

                                    </td>
                                    <td>
                                        @(item.LamMau == 1 ? "Đã duyệt" : "Chưa duyệt")

                                    </td>

                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.ID_BaoGia }, new { @class = "btn btn-outline btn-primary btn-xs" })

                                        @Html.ActionLink("Xóa", "Delete", new { id = item.ID_BaoGia }, new { @class = "btn btn-outline btn-primary btn-xs" })
                                        @Html.ActionLink("Xem chi tiết", "Detail", new { id = item.ID_BaoGia }, new { @class = "btn btn-outline btn-primary btn-xs" })
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->