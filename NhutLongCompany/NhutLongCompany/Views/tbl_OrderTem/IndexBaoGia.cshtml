@using NhutLongCompany.Models
@model IEnumerable<DonHangView>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Thông Tin báo giá</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Thêm báo giá", "Create", "tbl_OrderTem", new {@class = "btn btn-primary"})
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    Mã báo giá
                                </th>
                                <th>
                                    Lần báo giá
                                </th>
                                <th>
                                    Tên khách hàng
                                </th>
                                <th>
                                    Ngày giao hàng
                                </th>
                                <th>
                                    Địa chỉ giao hàng
                                </th>
                                <th>
                                    Người báo giá
                                </th>
                               
                                <th>
                                    Trạng thái
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DonHangView item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.code)
                                    </td>
                                    <td>
                                        Lần @(item.BaoGiaTemViews.Count + 1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Customer.NameCustomers)

                                    </td>
                                    <td>
                                        @(item.date_deliver.HasValue ? item.date_deliver.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")
                                    </td>
                                    <td>
                                        @(item.date_deliver.HasValue ? item.address_deliver : "Chưa cập nhật")
                                    </td>
                                    
                                    <td>Kinh doanh</td>
                                  
                                    <td>

                                        @if (item.BaoGiaTemView.status == 0)
                                        {
                                            <span>Chờ kết quả báo giá</span>
                                        }
                                        @if (item.BaoGiaTemView.status == 1)
                                        {
                                            <span>Đồng ý</span>
                                        }
                                        @if (item.BaoGiaTemView.status == 2)
                                        {
                                            <span>Từ chối</span>
                                        }

                                    </td>

                                    <td>

                                        @Html.ActionLink("Chi tiết", "EditBaoGia", new {item.id}, new {@class = "btn btn-outline btn-primary btn-xs"})
                                        @if (item.BaoGiaTemView.status == 0 || item.BaoGiaTemView.status == 2)
                                        {
                                            <a href="@Url.Action("Delete", "tbl_OrderTem", new {item.id})" class="btn btn-outline btn-primary btn-xs" onclick=" return confirm('Bạn có muốn xóa báo giá không?'); ">Xóa</a>
                                        }



                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->