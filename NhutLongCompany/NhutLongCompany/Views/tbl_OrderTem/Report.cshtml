@model IEnumerable <NhutLongCompany.Models.Report>

@{
    ViewBag.Title = "Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Báo cáo</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">

            <div class="panel-heading">
               <a href="@Url.Action("ExportReport")" class="btn btn-danger">Export Excel</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>

                                <th>
                                    Mã sản phẩm
                                </th>
                                <th>
                                    Tên sản phẩm
                                </th>
                                <th>
                                    Nhận tờ in offset
                                </th>
                                <th>
                                    Sản xuất giấy tấm
                                </th>
                                <th>
                                    Bồi
                                </th>
                                <th>
                                    Xả biến, cán lằn
                                </th>
                                <th>
                                    In FLEXO
                                </th>
                                <th>
                                    Bế
                                </th>
                                <th>
                                    Chập khe
                                </th>
                                <th>
                                    Bấm kim
                                </th>
                                <th>
                                    Dán
                                </th>
                                <th>
                                    Đóng gói
                                </th>
                                <th>
                                    Giao hàng
                                </th>
                                <th>
                                    Thanh toán
                                </th>
                                <th>
                                    Kết thúc đơn hàng
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.codeProducts</td>
                                    <td>@item.nameProducts</td>
                                    <td>@item.qt1</td>
                                    <td>@item.qt2</td>
                                    <td>@item.qt3</td>
                                    <td>@item.qt4</td>
                                    <td>@item.qt5</td>
                                    <td>@item.qt6</td>
                                    <td>@item.qt7</td>
                                    <td>@item.qt8</td>
                                    <td>@item.qt9</td>
                                    <td>@item.qt10</td>
                                    <td>@item.qt11</td>
                                    <td>@item.qt12</td>
                                    <td>@item.qt13</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<!-- Modal -->
