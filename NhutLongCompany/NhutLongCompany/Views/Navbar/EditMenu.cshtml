@using System.ComponentModel
@model NhutLongCompany.Models.AdminMenu
@{
    ViewBag.Title = "EditMenu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Edit Menu</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Form Elements
                </div>

                <div class="panel-body">
                    <form role="form" method="post">
                        <div class="row">
                            <div class="col-lg-6">

                                @Html.HiddenFor(m=>m.Id)
                                <div class="form-group">
                                    <label>Menu Name</label>
                                    @Html.ValidationMessageFor(m=>m.nameOption,"",new{@class="text-danger"})
                                    @Html.TextBoxFor(m => m.nameOption, new {@class = "form-control", @placeholder = "Enter Menu Name"})

                                </div>
                                <div class="form-group">
                                    <label>Action Name</label>
                                    @Html.TextBoxFor(m => m.action, new {@class = "form-control", @placeholder = "Enter Action Name"})
                                </div>
                                <div class="form-group">
                                    <label>Class Image Name</label>

                                    @Html.TextBoxFor(m=>m.imageClass,htmlAttributes:new {@class="form-control",@placeholder="Enter Images"})
                                </div>
                                <div class="form-group">
                                    <label>Menu Status</label>

                                    @Html.DropDownListFor(m => m.status, new List<SelectListItem>
                                    {
                                        new SelectListItem{Text = "DeActive",Value = "False"},
                                        new SelectListItem{Text = "Active",Value = "True"}

                                    }
                                   ,htmlAttributes:new{@class="form-control"})
                                </div>

                                <div class="form-group">
                                    <label>User</label>
                                    @Html.DropDownList("IdUser", (List<SelectListItem>)ViewData["listuser"], htmlAttributes: new { @class = "form-control" })

                                </div>
                            </div>

                            <div class="col-lg-6">

                                <div class="form-group">
                                    <label>Constroller Name</label>
                                    @Html.TextBoxFor(m=>m.controller,htmlAttributes:new {@class="form-control",@placeholder="Enter Controller Nmae"})
                                </div>
                                <div class="form-group">
                                    <label>Order Menu</label>
                                    <select id="drOrder" name="isOrder" class="form-control">
                                        <option value="99999999999999">Chose Order</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Parent  Menu</label>
                                    @Html.DropDownListFor(m => m.parentId, (List<SelectListItem>)ViewData["list"], htmlAttributes: new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Parent  Active</label>
                                    @Html.DropDownListFor(m => m.isParent, new List<SelectListItem> { new SelectListItem{Text = "DeActive",Value = "False"},
                                        new SelectListItem{Text = "Active",Value = "True"} }, htmlAttributes: new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <input value="send" name="command" type="submit" class="btn btn-primary" title="send" />
                                    <input value="cancel" name="command" type="submit" class="btn btn-primary" title="Cancel" />
                                </div>

                            </div>
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                    </form>


                    <!-- /.row (nested) -->


                </div>

                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
}