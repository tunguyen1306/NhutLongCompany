@model IEnumerable<NhutLongCompany.Models.tbl_FlowPauseTime>

    @foreach (var item in Model)
{
    <div class="form-group flowPause" data-ref="@(item.id)" data-status="@(item.status)" data-remove="0">
        <div class="col-lg-12">
            <div class="col-lg-5">
                <input type="text" class="form-control customDate begin" value="@(item.date_begin.HasValue?item.date_begin.Value.ToString("MM/dd/yyyy HH:mm:ss"):"")"/>
            </div>
            <div class="col-lg-5">
                <input type="text" class="form-control customDate end" value="@(item.date_end.HasValue ? item.date_end.Value.ToString("MM/dd/yyyy HH:mm:ss") : "")" />

            </div>
            <div class="col-lg-2" style="margin-top: 5px">
                <span class="btn btn-outline btn-default btn-xs" onclick="removeItem(this)">Remove</span>

            </div>
        </div>
    </div>
}
    
<script>
    var itemAdd = '<div class="form-group flowPause" data-ref="0" data-status="1" data-remove="0"><div class="col-lg-12"><div class="col-lg-5"><input type="text" class="form-control customDate begin" value=""/></div><div class="col-lg-5"><input type="text" class="form-control customDate end" value="" /></div> <div class="col-lg-2"><span class="btn btn-outline btn-default btn-xs" onclick="removeItem(this)" style="margin-top: 5px">Remove</span></div></div></div>';
    function addNew() {
        $('#loadQuyTrinhUpdate').append(itemAdd);
        $('.customDate').datetimepicker({
            format: 'MM/DD/YYYY HH:mm:ss'
        });
    }
    function removeItem(el) {
        $(el).parents('.flowPause').eq(0).attr('data-remove', '1');

        $(el).parents('.flowPause').eq(0).css('display', 'none');
    }
</script>