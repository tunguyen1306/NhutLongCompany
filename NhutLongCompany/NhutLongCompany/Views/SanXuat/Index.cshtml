@model IEnumerable<NhutLongCompany.Models.DonHangView>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Tiếp nhận sản xuất</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->


<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">

          
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    Mã báo giá
                                </th>
                                <th>
                                    Tên khách hàng
                                </th>
                                <th>
                                    Ngày bắt đầu DK
                                </th>
                                <th>
                                    Ngày kết thúc DK
                                </th>
                                <th>
                                   Trang thái
                                </th>
                             
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>

                                        @Html.ActionLink(item.code, "Edit", new { id = item.id }, htmlAttributes: new { @class = "btn btn-outline btn-primary btn-xs" })
                                        
                                    </td>
                                    <td>
                                        @item.Customer.NameCustomers


                                    </td>
                                    <td>
                                        @(item.date_begin_plan.HasValue ? item.date_begin_plan.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")
                                    </td>
                                    <td>
                                        @(item.date_end_plan.HasValue ? item.date_end_plan.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")
                                    </td>
                                    <td>
                                        @if (item.status == 0)
                                        {
                                            <span>Đang báo giá</span>
                                        }
                                        @if (item.status == 1)
                                        {
                                            <span>Đưa vào sản xuất</span>
                                        }
                                        @if (item.status == 2)
                                        {
                                            <span>Kế hoạch sản xuất</span>
                                        }
                                        @if (item.status == 3)
                                        {
                                            <span>Tiến hành sản xuất</span>
                                        }
                                        @if (item.status == 4)
                                        {
                                            <span>Kết thúc sản xuất</span>
                                        }

                                    </td>  
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
