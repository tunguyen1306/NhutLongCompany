@model IEnumerable<NhutLongCompany.Models.BaoGiaTemDetailView>﻿
@{
    Layout = null;
}

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

<!-- DataTables CSS -->
<link href="@Url.Content("~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css")" rel="stylesheet" type="text/css" />
<!-- DataTables Responsive CSS -->
<link href="@Url.Content("~/bower_components/datatables-responsive/css/dataTables.responsive.css")" rel="stylesheet" type="text/css" />

<link href="@Url.Content("~/bower_components/morrisjs/morris.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/bower_components/font-awesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/bootstrap-datetimepicker.css")" rel="stylesheet" type="text/css" />


<!-- /.row -->
@using (Html.BeginForm())
{
    <a href="javascript:window.print()" class="btn btn-primary">In lệnh sản xuất</a>


    @Html.AntiForgeryToken()
    <div class="container" style="width:900px!important">
        @foreach(var item in Model) { 
        <div class="row">
            <div class="col-lg-2">
                <div class="row">
                    <div class="col-xs-3 text-right">
                        <img src="/images/mvl.png">
                    </div>
                </div>
            </div>
            <div class="col-lg-10">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">

                            <div class="col-xs-5 print-header print-header-title">
                                Lệnh sản xuất
                            </div>
                            <div class="col-xs-4 print-header">
                                <label style="color:red;">Số: </label> <label> @item.idOrderTem   </label>
                                <label style="color:red;">Ngày: </label> <label> @(DateTime.Now.ToString("dd/MM/yyyy"))   </label>

                            </div>

                        </div>
                        <div class="row">
                            <div class="col-xs-12 print-line"></div>
                        </div>
                        <div class="row">
                            <div class="col-xs-3 text-right">

                                <label style="color:red;text-align:left;">      KH:</label> <label> @item.name_customer   </label>
                            </div>
                            <div class="col-xs-5">
                                <label style="color:red;">     Ngày sản xuất</label> <label> @item.Date_Begin   </label>

                            </div>
                            <div class="col-xs-4">
                                <label style="color:red;">    Ngày giao hàng</label> <label> @item.date_deliver   </label>

                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <table border="1" class="table table-striped table-bordered table-hover">
                    <tr>
                        <td class="auto-style2">Sản phẩm</td>
                        <td colspan="3" style="color: #000000">@item.NameProducts</td>
                        <td colspan="2">Khổ giấy SX</td>
                        <td colspan="2"> </td>
                    </tr>
                    <tr>
                        <td class="auto-style2">Số lớp</td>
                        <td colspan="3" style="color: #000000">@item.SolopProducts</td>
                        <td colspan="2">Khổ đơn đôi:</td>
                        <td colspan="2">
                            <select class="form-control">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="auto-style2">Loại sóng</td>
                        <td colspan="3" style="color: #000000">@item.LoaiSongProducts</td>
                        <td colspan="2">Số lượng SX (tấm):</td>
                        <td colspan="2">&nbsp;</td>
                    </tr>
                    <tr>
                        <td class="auto-style2">&nbsp;</td>
                        <td>MẶT</td>
                        <td>SÓNG</td>
                        <td>GIỮA</td>
                        <td>SÓNG</td>
                        <td>GIỮA</td>
                        <td>SÓNG</td>
                        <td>ĐÁY</td>
                    </tr>
                    <tr>
                        <td class="auto-style2">Loại giấy </td>
                        <td><input type="text" class="form-control" name="LoaiGiay1" id="LoaiGiay1"></td>
                        <td><input type="text" class="form-control" name="LoaiGiay2" id="LoaiGiay2"></td>
                        <td><input type="text" class="form-control" name="LoaiGiay3" id="LoaiGiay3"></td>
                        <td><input type="text" class="form-control" name="LoaiGiay4" id="LoaiGiay4"></td>
                        <td><input type="text" class="form-control" name="LoaiGiay5" id="LoaiGiay5"></td>
                        <td><input type="text" class="form-control" name="LoaiGiay6" id="LoaiGiay6"></td>
                        <td><input type="text" class="form-control" name="LoaiGiay6" id="LoaiGiay7"></td>
                    </tr>
                    <tr>
                        <td class="auto-style2">Định lượng</td>
                   
                        <td><input type="text" class="form-control" name="DinhLuong1" id="DinhLuong1"></td>
                        <td><input type="text" class="form-control" name="DinhLuong2" id="DinhLuong2"></td>
                        <td><input type="text" class="form-control" name="DinhLuong3" id="DinhLuong3"></td>
                        <td><input type="text" class="form-control" name="DinhLuong4" id="DinhLuong4"></td>
                        <td><input type="text" class="form-control" name="DinhLuong5" id="DinhLuong5"></td>
                        <td><input type="text" class="form-control" name="DinhLuong6" id="DinhLuong6"></td>
                        <td><input type="text" class="form-control" name="DinhLuong6" id="DinhLuong7"></td>
                    </tr>
                    <tr>
                        <td class="auto-style2">Khổ cuộn(cm)</td>
                        <td><input type="text" class="form-control" name="KhoCuon1" id="KhoCuon1"></td>
                        <td><input type="text" class="form-control" name="KhoCuon2" id="KhoCuon2"></td>
                        <td><input type="text" class="form-control" name="KhoCuon3" id="KhoCuon3"></td>
                        <td><input type="text" class="form-control" name="KhoCuon4" id="KhoCuon4"></td>
                        <td><input type="text" class="form-control" name="KhoCuon5" id="KhoCuon5"></td>
                        <td><input type="text" class="form-control" name="KhoCuon6" id="KhoCuon6"></td>
                        <td><input type="text" class="form-control" name="KhoCuon6" id="KhoCuon7"></td>
                    </tr>
                    <tr>
                        <td class="auto-style2">DxR(cm)</td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td colspan="2">In Flexo</td>
                        <td colspan="2">@item.InFlexoProducts</td>
                    </tr>
                    <tr>
                        <td class="auto-style2">Số lượng</td>
                        <td colspan="3">@item.SolopProducts</td>
                        <td colspan="2">Thành phẩm</td>
                        <td colspan="2">@item.OffsetFlexoProducts</td>
                    </tr>
                    <tr>
                        <td colspan="2">Người lập lệnh</td>
                        <td colspan="2">&nbsp;</td>
                        <td colspan="2">Ngày lập lệnh</td>
                        <td colspan="2">@(DateTime.Now.ToString("dd/MM/yyyy")) </td>
                    </tr>
                </table>
            </div>
        </div>
        }


        <div class="print-footer">
            <div class="print-footer-company">
                Công ty TNHH MINH VIỆT LONG
            </div>
            <div class="print-footer-address">
                Nhà máy: 255, Ấp Đồng Tâm, Xã Long Trạch, Huyện Cần Đước, Tỉnh Long An Tel: 072 3722 095 Fax: 072 3722 095<br>
                Văn phòng: 103 đường 715 Tạ Quang Bửu, Q.8, TP. HCM Tel: 08 3852 0166 Fax: 08 3852 0266<br>
                Email: baobiminhvietlong@gmail.com Web: thungbaobi.com
            </div>
        </div>
    </div>
}

