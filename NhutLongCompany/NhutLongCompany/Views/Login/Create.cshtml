@model NhutLongCompany.Models.tbl_User

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Thêm thông tin User</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Form Elements
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="panel-body">
                    <div class="row">

                        <div class="col-lg-6">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                           
                            <div class="form-group">
                                <label>Tên đăng nhập</label>

                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Họ và tên</label>

                                @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })

                            </div>








                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Mật khẩu</label>

                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Trạng thái</label>

                                @Html.DropDownListFor(model => model.Status, new List<SelectListItem>
                                {
                                    new SelectListItem {Text = "Hoạt động", Value = "1"},
                                    new SelectListItem {Text = "Tạm dừng", Value = "0"}
                                }, new { @class = "form-control" })




                            </div>
                            <div class="form-group">

                                <input type="submit" value="Thêm" class="btn btn-primary" />
                                @Html.ActionLink("Hủy", "Index", "", htmlAttributes: new { @class = "btn btn-primary" })

                            </div>


                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
            }

        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
